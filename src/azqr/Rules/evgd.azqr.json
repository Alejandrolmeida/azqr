[
    {
        "WorkflowName": "EventGrid",
        "Rules": [
            {
                "RuleName": "CAF Naming",
                "SuccessEvent": "50",
                "ErrorMessage": "Name should start with 'evgd' as prefix",
                "ErrorType": "Error",
                "RuleExpressionType": "LambdaExpression",
                "Expression": "input1.Name.StartsWith(\"evgd\")",
                "Actions": {
                    "OnSuccess": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"Yes\""
                        }
                    },
                    "OnFailure": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"No\""
                        }
                    }
                }
            },
            {
                "RuleName": "Diagnostic Settings",
                "SuccessEvent": "60",
                "ErrorMessage": "No Diagnostics Setting Found",
                "ErrorType": "Error",
                "RuleExpressionType": "LambdaExpression",
                "Expression": "input2 > 0",
                "Actions": {
                    "OnSuccess": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "input2"
                        }
                    },
                    "OnFailure": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"None\""
                        }
                    }
                }
            }
        ]
    }
]